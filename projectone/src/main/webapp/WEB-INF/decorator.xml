	<!-- layout 영역 -->
	<decorator name="layoutheader" page="layout/layoutheader.jsp" />
	<decorator name="default" page="layout/layout.jsp" />
	<decorator name="index" page="layout/layout.jsp">
		<pattern>/</pattern>
	</decorator>
